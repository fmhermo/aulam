		<record id="formulario_persona" model="ir.ui.view">
			<field name="name">persona.form</field>
			<field name="model">aulam.persona</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Persona">
					<sheet>
						<group>
							<h1><field name="nomPersona" string="Nombre"/></h1>
<!--					    	<field name="apellidos" string="Apellidos"/></h1>  --> 
					    </group>
					    <group col="4">
					    	<group colspan="2">
								<field name="dni" string="DNI"/>
								<field name="telefono" string="Teléfono(s)"/>
								<field name="nacimiento" string="Fecha de nacimiento"/>
								<field name="email" string="Correo electrónico"/>
							</group>
							<group colspan="2">							
								<field name="domicilio" string="Domicilio"/>
								<field name="cpt" string="Código Postal"/>
								<field name="localidad" string="Población"/>
							</group>
							<group colspan="4">
								<field name="observaciones" string="Observaciones"/>
							</group>
						</group>
					</sheet>
				</form>		
			</field>
		</record> 	
		 	
		<record id="formulario_alumno" model="ir.ui.view">
			<field name="name">alumno.form</field>
			<field name="model">aulam.alumno</field>
			<field name="type">form</field>
			<field name="arch" type="xml">
				<form string="Alumno">
					<sheet>
						<group col="10">
							<group colspan="6">
								<h1><field name="nomAlumno" string="Nombre"/></h1>
							</group>
							<group colspan="4">
								<field name="id_season"/>
							</group>								
						</group>
							<!--							<button align="right" class="oe_right oe_stat_button" 
								type="action" name="facturacion" icon="fa-euro" string="Facturar">

   							</button>
   							<button align="right" class="oe_right oe_stat_button" 
								type="action" name="recibo" icon="fa-pencil" string="Recibo">

   							</button>
-->
						<notebook>
							<page string="Personales">
								<group col="5">
									<group colspan="2">
										<field name="id_tutor1" string="Tutor"/>								
										<field name="id_tutor2" string="Tutor 2º"/>
										<field name="telefono" string="Teléfono"/>								
										<field name="email" string="Correo electrónico"/>							
									</group>
									<group colspan="3">
										<field name="dni_t1" string="DNI Tutor"/>							
										<field name="nacimiento" string="F. nacimiento"/>
										<field name="domicilio" string="Domicilio"/>
										<field name="cpt" string="C. Postal"/>
										<field name="localidad" string="Localidad"/>	
									</group>
								</group>
							</page>													
							<page string="Aula">
								<group col="4">
									<group colspan="2">
										<field name="id_colegio" string="Colegio"/>
										<field name="id_curso" string="Curso"/>
										<field name="asignaturas" string="Asignaturas"/>
										<field name="id_tarifa" string="Tarifa"/>
										<field name="fAlta" string="Fecha de Alta"/>
										<field name="fBaja" string="Fecha de Baja"/>
										<field name="hExtra" string="Horas Extra"/>																	
									</group>
									<group colspan="2">
										<field name="id_horario" string="Horario"/>
									</group>
								</group>																		
								<group>
									<field name="observaciones" string="Observaciones"/>
								</group>
							</page>
							<page string="Académicos">
								<group col="6">
									<group colspan="3" string="">
										<field name="id_evaluacion" string="Evaluaciones"/>
									</group>
									<group colspan="3">								
										<field name="id_calificacion" string="Calificaciones"/>
									</group>
								</group>
							</page>
							<page string="Horario de vacaciones">
								<group col="5">
									<field name="id_horariov" string="Horario"/>
								</group>								
							</page>													
						</notebook>
					</sheet>
				</form>
			</field>
		</record>
